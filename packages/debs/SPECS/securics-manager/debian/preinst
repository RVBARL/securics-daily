#!/bin/sh
# preinst script for Securics

set -e

# configuration variables
DIR="/var/ossec"
SECURICS_TMP_DIR="${DIR}/packages_files/manager_config_files"
VERSION="$2"
MAJOR=$(echo "$VERSION" | cut -dv -f2 | cut -d. -f1)

# environment configuration
if [ ! -d ${SECURICS_TMP_DIR} ]; then
    mkdir -p ${SECURICS_TMP_DIR}
else
    rm -rf ${SECURICS_TMP_DIR}
    mkdir -p ${SECURICS_TMP_DIR}
fi

case "$1" in
    install|upgrade)

        if [ "$1" = "upgrade" ]; then
            if command -v systemctl > /dev/null 2>&1 && systemctl > /dev/null 2>&1 && systemctl is-active --quiet securics-manager > /dev/null 2>&1; then
                systemctl stop securics-manager.service > /dev/null 2>&1
                touch ${SECURICS_TMP_DIR}/securics.restart
            elif command -v service > /dev/null 2>&1 && service securics-manager status 2>/dev/null | grep "is running" > /dev/null 2>&1; then
                service securics-manager stop > /dev/null 2>&1
                touch ${SECURICS_TMP_DIR}/securics.restart
            elif ${DIR}/bin/securics-control status 2>/dev/null | grep "is running" > /dev/null 2>&1; then
                touch ${SECURICS_TMP_DIR}/securics.restart
            elif ${DIR}/bin/ossec-control status 2>/dev/null | grep "is running" > /dev/null 2>&1; then
                touch ${SECURICS_TMP_DIR}/securics.restart
            fi
            ${DIR}/bin/ossec-control stop > /dev/null 2>&1 || ${DIR}/bin/securics-control stop > /dev/null 2>&1
            if pgrep -f ossec-authd > /dev/null 2>&1; then
                kill -15 $(pgrep -f ossec-authd)
            fi

            if [ -d ${DIR}/logs/ossec ]; then
                mv ${DIR}/logs/ossec ${DIR}/logs/securics
            fi

            if [ -d ${DIR}/queue/ossec ]; then
                mv ${DIR}/queue/ossec ${DIR}/queue/sockets
            fi

            # Delete old API backups
            if [ -d ${DIR}/~api ]; then
                rm -rf ${DIR}/~api
            fi

            # Get old package version
            if [ -f /etc/ossec-init.conf ]; then
                . /etc/ossec-init.conf
            else
                VERSION=$(${DIR}/bin/securics-control info -v)
            fi

            # Get the major and minor version
            MAJOR=$(echo $VERSION | cut -dv -f2 | cut -d. -f1)
            MINOR=$(echo $VERSION | cut -d. -f2)

            # Delete 3.X Securics API service
            if [ "$MAJOR" = "3" ] && [ -d ${DIR}/api ]; then
                if command -v systemctl > /dev/null 2>&1 && systemctl > /dev/null 2>&1 && \
                  systemctl list-unit-files --type service | grep securics-api; then
                    systemctl stop securics-api.service > /dev/null 2>&1
                    systemctl disable securics-api.service > /dev/null 2>&1
                    rm -f /etc/systemd/system/securics-api.service || true
                fi

                if command -v service > /dev/null 2>&1 && service status securics-api > /dev/null 2>&1 ; then
                    service securics-api stop > /dev/null 2>&1
                    update-rc.d securics-api remove > /dev/null 2>&1
                    rm -f /etc/rc.d/init.d/securics-api || true
                fi
            fi
        fi

        if [ ! -z "$2" ] && [ ! -f ${DIR}/etc/ossec.conf ] ; then
            touch ${SECURICS_TMP_DIR}/create_conf
        fi

        if [ "$1" = "upgrade" ]; then
            # RBAC database
            if [ -f ${DIR}/api/configuration/security/rbac.db ]; then
                cp -fp ${DIR}/api/configuration/security/rbac.db ${SECURICS_TMP_DIR}/rbac.db
            fi

            # API configuration file
            if [ -f ${DIR}/api/configuration/api.yaml ]; then
                cp -fp ${DIR}/api/configuration/api.yaml ${SECURICS_TMP_DIR}/api.yaml
            fi

            # Agent-groups files
            if [ -d ${DIR}/queue/agent-groups ]; then
                mv -f ${DIR}/queue/agent-groups ${SECURICS_TMP_DIR}/
            fi
        fi

        # Delete old service
        if [ -f /etc/init.d/ossec ]; then
          rm /etc/init.d/ossec
        fi

        if [ -d ${DIR}/etc/lists ]; then
          cp -rp ${DIR}/etc/lists ${SECURICS_TMP_DIR}/lists
        fi

        if [ -f ${DIR}/etc/client.keys ]; then
            cp -p ${DIR}/etc/client.keys ${SECURICS_TMP_DIR}/client.keys
        fi

        if [ -f ${DIR}/etc/local_internal_options.conf ]; then
            cp -p ${DIR}/etc/local_internal_options.conf ${SECURICS_TMP_DIR}/local_internal_options.conf
        fi

        if [ -f ${DIR}/etc/rules/local_rules.xml ]; then
            cp -p ${DIR}/etc/rules/local_rules.xml ${SECURICS_TMP_DIR}/local_rules.xml
        fi

        if [ -f ${DIR}/etc/decoders/local_decoder.xml ]; then
            cp -p ${DIR}/etc/decoders/local_decoder.xml ${SECURICS_TMP_DIR}/local_decoder.xml
        fi

        if [ -f ${DIR}/etc/ossec.conf ]; then
            cp -p ${DIR}/etc/ossec.conf ${SECURICS_TMP_DIR}/ossec.conf
        fi

        if [ -d ${DIR}/etc/shared ]; then
            cp -rp ${DIR}/etc/shared ${SECURICS_TMP_DIR}/group
        fi

        if [ -d ${DIR}/var/db/agents ]; then
            rm -rf ${DIR}/var/db/agents
        fi

        # Remove plain-text agent information if exists
        if [ -d ${DIR}/queue/agent-info ]; then
            rm -rf ${DIR}/queue/agent-info/* > /dev/null 2>&1
        fi

        if [ -d ${DIR}/queue/rootcheck ]; then
            rm -rf ${DIR}/queue/rootcheck/* > /dev/null 2>&1
        fi

        # Remove groups backup content if exists
        if [ -d ${DIR}/backup/groups ]; then
            rm -rf ${DIR}/backup/groups/* > /dev/null 2>&1
        fi
    ;;

    abort-upgrade)

    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 0

    ;;

esac

exit 0
